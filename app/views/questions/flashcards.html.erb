
  <% @questions.tap do |question| %>
    <div class="row">
      <div class="col-12 col-lg-6 mx-auto">
        <div class="flash-card mt-5 pb-5" id="flash-card" >
          <div class="front">
            <div class="card text-center p-3">
              <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <% if question.category == "Ruby"  %>
                <h6 class="card-subtitle mb-2 text-muted"><%= image_tag 'rubi.svg', class: "ruby-image" %>Ruby on rails - <%= question.level %> developer</h6>
                <% else %>
                  <h6 class="card-subtitle mb-2 text-muted"><%= image_tag 'js.svg', class: "ruby-image" %>Javascript - <%= question.level %> developer</h6>
                <% end %>
                <p class="card-text"><%= question.question %></p>
                <div class="col-6 mx-auto p-1" style="background-color: #f5f5f5; border: 1px solid #ccc; border-radius: 0.25rem;">Click anywhere to flip</div>
              </div>
            </div>

          </div>
          <div class="back">
            <div class="card">
              <div class="card-body">

                <div class="col-6 mx-auto p-1 text-center" style="background-color: #f5f5f5; border: 1px solid #ccc; border-radius: 0.25rem;">Click anywhere to flip back</div>
                <p class="card-text"><%= question.answer %></p>
                <div class="row">
                  <div class="col-6 text-end">
                    <button type="button" class="btn btn-primary">Large button</button>
                  </div>
                  <div class="col-6 text-start">
                    <button type="button" class="btn btn-secondary">Large button</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  <% end %>


<style>
   {
  padding: 15px 30px;
  margin: 10px 0;
  border: 1px solid #ECECEC;
  border-radius: 3px;
  min-height: 250px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  position: relative;
  overflow: hidden;
  }

  .ruby-image {
    height: 1.5rem;
    width: 1.5rem;
  }


  .main-container {
    position: absolute;
    width: 250px;
    height: 320px;
    background: none;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .flash-card {
    position: relative;
    width: 100%;
    min-height: 240px;
    transform-style: preserve-3d;
    transition: all 0.8s ease;
  }

  .front {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    /*background-color: #ffc728;*/
    /*color: #000;*/
    /*text-align: center;*/
  }

  .back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    /*background-color: purple;*/
    /*color: white;*/
    /*text-align: center;*/
    transform: rotateY(180deg);
  }

  .flipCard {
    transform: rotateY(180deg);
  }




</style>

<script>
  const card = document.getElementById("flash-card")

  card.addEventListener("click", flipCard);

  function flipCard() {
    card.classList.toggle("flipCard")
  }
</script>
